      {{artInfo.tit}}   
  </view>

  <view class='author'>
    <image src="{{artInfo.aPhoto}}"></image>
    <text>{{artInfo.author}}</text>
  </view>

  
  <view class='infos'>
    <text>
      {{artInfo.words}}   
    </text> 
  </view>

  <image class='big-pic' src="{{artInfo.bigImg}}" mode='aspectFill'></image>
</view>
 <view class='bar'>
      <text class='iconfont icon-icon_share'></text>
      <text class='iconfont icon-xin'></text>
      <text class='iconfont icon-liuyanjianyi'></text>
  </view>


