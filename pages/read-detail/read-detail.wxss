@import '/utils/icon/iconfont.wxss';
page{
  background:white;
}
.list{
  background: #FFF;
  padding: 30rpx;
  width: 690rpx;
}
.author{
  display: flex;
  align-items: center;
  font-size: 26rpx;
  margin-top: 40rpx;
}
.author image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.big-pic{
  width: 690rpx;
  height: 300rpx;
  margin-top: 30rpx;
  border-radius: 10rpx;
}

.title{
  font-size: 40rpx;
  line-height: 52rpx;
  color: #444;
  font-weight: bold;
  margin-top: 25rpx;
}

.title text{
  display: inline-block;
  width: 74rpx;
  height: 44rpx;
  border-radius: 22rpx;
  background: rgb(188, 120, 120);
  font-size: 24rpx;
  text-align: center;
  color: white;
  line-height: 44rpx;
  font-weight: normal;
  vertical-align: top;
  position: relative;
  top: 5rpx;

}

.infos{
  color: rgb(127, 127, 127);
  font-size: 28rpx;

}

.bar{
  width: 750rpx;
  height: 20rpx;
  display: flex; 
  justify-content: space-around;
  position: fixed;
  bottom: 60rpx;
}
.bar text{
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  font-size: 45rpx;
}

